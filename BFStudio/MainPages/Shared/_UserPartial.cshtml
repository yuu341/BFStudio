
@model IEnumerable<BFStudio.Entity.MST_MENU>

@foreach (var menu in Model.OrderBy(p => p.SORT_NO))
{
    <ul>
        <li>@Ajax.ActionLink(@menu.NAME,@menu.ACTION ,@menu.CONTROLLER , null , new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "main" }, htmlAttributes: new { @class = "upper-menu" })</li>
    </ul>
}

<ul class="logout">
    <li>@Ajax.ActionLink("ログアウト", "LogOff", "Login", null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "main" }, htmlAttributes: new { @class = "upper-menu" })</li>
</ul>

